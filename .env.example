# ICPAC Booking System Environment Variables
# Copy this file to .env and update with your values

# Project Configuration
PROJECT_NAME=icpac
VERSION=latest
REGISTRY=  # Docker registry URL if using private registry

# Database Configuration
DB_NAME=icpac_bookings
DB_USER=icpac_user
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# Backend Configuration
BACKEND_PORT=8000
DJANGO_SECRET_KEY=your-secret-key-generate-with-django
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=*

# Frontend Configuration
FRONTEND_PORT=3000
API_URL=http://localhost:8000/api
WEBSOCKET_URL=ws://localhost:8000/ws

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:9020

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# Nginx Configuration (Optional)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30