# ==============================================
# ICPAC BOOKING SYSTEM - ENVIRONMENT VARIABLES
# ==============================================
# Quick start: cp .env.example .env && docker compose up --build -d
# Default admin login: admin@icpac.net / admin123

# ==============================================
# PORT CONFIGURATION (Starting from 9040)
# ==============================================
FRONTEND_PORT=9040
BACKEND_PORT=9041
DB_PORT=9042
REDIS_PORT=9043
FRONTEND_NEW_PORT=9044

# ==============================================
# DATABASE SETTINGS (PostgreSQL)
# ==============================================
POSTGRES_DB=icpac_booking
POSTGRES_USER=icpac
POSTGRES_PASSWORD=icpac123

# Database connection vars (used by Django)
PGDATABASE=icpac_booking
PGUSER=icpac
PGPASSWORD=icpac123
USE_SQLITE=False

# ==============================================
# DJANGO BACKEND SETTINGS
# ==============================================
DEBUG=True
SECRET_KEY=django-insecure-change-me-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================
# EMAIL SETTINGS (for OTP/Notifications)
# ==============================================
# Console backend prints emails to logs (no SMTP needed for testing)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# To use Gmail SMTP instead, uncomment below and set credentials:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-gmail-app-password
# GMAIL_EMAIL=your-email@gmail.com
# GMAIL_APP_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=ICPAC Booking System <noreply@icpac.net>

# ==============================================
# URLS
# ==============================================
FRONTEND_URL=http://localhost:9040
REACT_APP_API_URL=/api

# ==============================================
# CORS SETTINGS
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:9040,http://localhost:9041,http://localhost:9044,http://localhost:3000,http://127.0.0.1:9040,http://127.0.0.1:9041,http://127.0.0.1:9044
CSRF_TRUSTED_ORIGINS=http://localhost:9040,http://localhost:9041,http://localhost:9044

# ==============================================
# PRODUCTION CHECKLIST
# ==============================================
# [ ] Set DEBUG=False
# [ ] Generate new SECRET_KEY
# [ ] Update ALLOWED_HOSTS with your server IPs
# [ ] Use strong POSTGRES_PASSWORD
# [ ] Switch EMAIL_BACKEND to smtp and configure credentials
# [ ] Update CORS/CSRF origins for your domain
